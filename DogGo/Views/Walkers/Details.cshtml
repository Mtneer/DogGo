@model DogGo.Models.Walker

@{
    ViewData["Title"] = "Walker Details";
}

<h1>Walker Profile</h1>

<div class="row">
    <div class="col-sm-10">
        <div><img class="bg-info" src="@Model.ImageUrl" alt="avatar" /></div>
        <h5>@Html.DisplayFor(model => model.Name)</h5>
        <p>@Html.DisplayFor(model => model.NeighborhoodId)</p>
    </div>
    <div class="col-sm-10">
        <h5>Recent Walks</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        "Date"
                    </th>
                    <th>
                        "Client"
                    </th>
                    <th>
                        "Duration"
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Walks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                    </tr>
                }
             </tbody>
        </table>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
